<%= form_with(model: @player) do |form| %>
  <% if player.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
        <% player.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.label :birthdate, style: "display: block" %>
    <%= form.date_field :birthdate %>
  </div>

  <div>
    <%= form.label :gender_id, style: "display: block" %>
    <%= form.text_field :gender_id %>
  </div>

  <%#= render partial: 'device_form', locals: { player_form: form } %>
  <h2>Device</h2>
  <%= form.fields_for @player.device do |device_form| %>
    <div>
      <%= device_form.label :model, style: "display: block" %>
      <%= device_form.text_field :model %>
    </div>

    <div>
      <%= device_form.label "Operating System", style: "display: block" %>
      <%= device_form.text_field :operating_system_id %>
    </div>

    <div>
      <%= device_form.label "Operating System Version", style: "display: block" %>
      <%= device_form.text_field :os_version %>
    </div>

    <div>
      <%= device_form.label :locale, style: "display: block" %>
      <%= device_form.text_field :locale_id %>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
